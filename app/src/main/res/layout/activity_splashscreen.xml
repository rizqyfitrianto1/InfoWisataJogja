<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Splashscreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_above="@+id/text_logo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logologo" />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/text_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:fontFamily="@font/nunito_extralight"
        android:text="Alwis Cruise"
        android:textSize="30sp"
        android:textColor="@color/dark_blue"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/text_logo"
        android:text="Alwis Listening Alwis Understanding"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/allura"
        android:textSize="28sp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/wave_splash" />
</RelativeLayout>